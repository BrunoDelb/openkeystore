<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/screen_width"
    android:layout_height="@dimen/screen_height"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/appborder" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cancelButton"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/errorPIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_large"
        android:textColor="#ff0000"/>
        
     <TextView
        android:id="@+id/setPINtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_large"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/leadpin1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Specify a PIN of your choice:" />
    
    <EditText
        android:id="@+id/editpin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:password="true"
        android:inputType="textPassword" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/leadpin2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Retype the PIN:" />

    <EditText
        android:id="@+id/editpin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:password="true"
        android:inputType="textPassword" />
    
    </LinearLayout>
    
    <include layout="@layout/lower_buttons"/>

</RelativeLayout>
